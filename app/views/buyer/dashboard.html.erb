
<div class="row">
  <% @products.each do |product| %>
    <div class="col-sm-3 col-lg-3 col-md-3">
        <div class="thumbnail">
          <span class="tnail">
              <%= image_tag product.avatar.url(:medium) %>
          </span>
            <div class="caption">
                <h4 class="pull-right">KSH <%= product.price%></h4>
                <h4><%= link_to product.name, viewproduct_path(product) %>
                </h4>
                <p><%= product.description%></p>
            </div>
            <div class="ratings">
                <p class="pull-right">15 reviews</p>
                <p>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                </p>
            </div>
        </div>
    </div>
  <% end %>

</div>
