<p id="notice"><%= notice %></p>

<h1>Products</h1>

<%= link_to 'New Product', new_product_path %>


    <div class="row">
      <% @products.each do |product| %>
      <div class="col-sm-3 col-lg-3 col-md-3">
          <div class="thumbnail ">
            <span class="tnail">
                <%= image_tag product.avatar.url(:medium) %>
            </span>
              <div class="caption">
                <div class="col-lg-12 hew">
                  <h4 class="row col-lg-6">
                    <%= link_to product.name, product %>
                  </h4>
                  <div class="pull-right col-lg-6">
                    <h4 class="pull-right product-q">KSH <%= product.price %></h4><br>
                    <h5 class="pull-right product-q">Stock <%= product.quantity %></h5><br>
                    <span class="pull-right product-q"><i class="fa fa-object-group"></i> <%= product.category %></span>
                  </div>

                </div>
                <div class="col-lg-12 hew">
                  <p class=""><%= product.description %></p>
                </div>
              </div>
              <div class="ratings">
                  <p class="pull-right">15 reviews</p>
                  <p>
                      <span class="glyphicon glyphicon-star"></span>
                      <span class="glyphicon glyphicon-star"></span>
                      <span class="glyphicon glyphicon-star"></span>
                      <span class="glyphicon glyphicon-star"></span>
                      <span class="glyphicon glyphicon-star"></span>
                  </p>
              </div>
              <div class="actions">
                <%= link_to 'Show', product %>
                <%= link_to 'Edit', edit_product_path(product) %>
                <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
          </div>
      </div>
      <% end %>
    </div>
